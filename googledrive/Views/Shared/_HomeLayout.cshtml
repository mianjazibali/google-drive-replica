
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Lumen.css" rel="stylesheet" />
    <link href="~/Content/Home.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link href="~/Content/contextmenu/jquery.contextMenu.min.css" rel="stylesheet" />
    <script src="~/Scripts/contextmenu/jquery.contextMenu.min.js"></script>
    <script src="~/Scripts/contextmenu/jquery.ui.position.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/Home.js"></script>
</head>
<body>
    <div id="lg-msg" class="lg-msg alert" style="display:none;">
        <strong></strong>
        <span></span>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="@Url.Content("~/Home")">Drive</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto"></ul>

                <div class="form-inline my-2 my-lg-0">
                    <i id="spinner" class="fa fa-spinner fa-spin" style="margin: 2px 10px 0 0; color: white; display: none;"></i>
                    <input id="searchinput" type="text" placeholder="Search" style="padding-left: 5px; margin: 3px 5px 0 0;">
                </div>

                <ul class="navbar-nav my-2 my-lg-0">
                    <li class="nav-item"><a class="nav-link"><i class="fa fa-user" aria-hidden="true" style="margin-right: 5px;"></i>@ViewBag.Username</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Content("~/User/Logout")"><i class="fa fa-sign-out" aria-hidden="true" style="margin-right: 5px;"></i>Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid text-center">
        <div class="row content">
            <div class="col-sm-2 sidenav">
                <div class="well">

                </div>
            </div>
            <div class="col-sm-8 text-left">
                @RenderBody()
            </div>
            <div class="col-sm-2 sidenav">
                <div class="well">
                    <button type="button" class="btn btn-primary btn-lg btn-block" id="FileUploadDummy"><i class="fa fa-file" aria-hidden="true" style="margin-right: 7px;"></i>Upload File</button><br />
                    <button type="button" class="btn btn-outline-primary btn-lg btn-block" id="createfolderbtn"><i class="fa fa-folder" aria-hidden="true" style="margin-right: 7px;"></i>Create Folder</button><br />
                    <button type="button" class="btn btn-outline-primary btn-lg btn-block" id="copyclipboardbtn" style="display: none;"><i class="fa fa-clipboard" aria-hidden="true" style="margin-right: 7px;"></i>Copy To Clipboard</button>
                    <input type="text" value="" id="copyclipboard" style="opacity: 0; position: fixed;"/>
                    <div id="createfolderinput" style="height: 100px; margin-top: 20px; display: none;">
                        <button type="button" id="savefolder" class="btn btn-outline-success" style="float: right">Save</button>
                        <div style="overflow: hidden; padding-right: .5em;">
                            <input type="text" id="mfolderid" value="0" placeholder="" style="width: 100%" hidden />
                            <input type="text" id="mfoldername" value="" placeholder="New Folder" style="width: 100%; height: 35px; padding: 0px 3px;" />
                        </div>
                    </div>
                    <div id="specificshare" style="height: 100px; margin-top: 20px; display:none;">
                        <button type="button" id="cancelsharebtn" class="btn btn-outline-danger" style="float: right">Cancel</button>
                        <div style="overflow: hidden; padding-right: .5em;">
                            <input type="text" id="sfileid" value="0" placeholder="" style="width: 100%" hidden />
                            <input type="text" id="suserlogin" value="" placeholder="Login" style="width: 100%; height: 35px; padding: 0px 3px;" />
                        </div>
                        <table id="shareduserstable" class="table" style="margin-top: 10px;">
                            <thead>
                                <tr class="table-primary">
                                    <th>User</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="sharedusers">
                                <tr class="table-light">
                                    <th>Name</th>
                                    <th><a href="#"><i class="fa fa-remove"></i></a></th>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div id="createfileinput" style="height: 100px; margin-top: 20px; display: none;">
                        <button type="button" id="savefile" class="btn btn-outline-success" style="float: right">Save</button>
                        <div style="overflow: hidden; padding-right: .5em;">
                            <input type="text" id="mfileid" value="0" placeholder="" style="width: 100%" hidden />
                            <input type="text" id="mfilename" value="" placeholder="New Folder" style="width: 100%; height: 35px; padding: 0px 3px;" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
